<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/xs_space">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <ImageView
            android:id="@+id/bet_hero_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hero_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/img_bitcoin"/>

        <Space
            android:id="@+id/center_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/bet_yes_price_btn"
            android:layout_width="@dimen/bet_btn_width"
            android:layout_height="@dimen/buttons_height"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/bet_hero_image"
            android:background="@color/politikon_yes_green_cost"
            android:gravity="center"
            tools:text="20"/>

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttons_height"
            android:layout_below="@+id/bet_hero_image"
            android:layout_toLeftOf="@+id/center_bottom"
            android:layout_toRightOf="@id/bet_yes_price_btn"
            android:background="@color/politikon_yes_green"
            android:gravity="center"
            android:text="@string/yes"/>

        <Button
            android:id="@+id/bet_no_price_btn"
            android:layout_width="@dimen/bet_btn_width"
            android:layout_height="@dimen/buttons_height"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bet_hero_image"
            android:background="@color/politikon_no_red_cost"
            android:gravity="center"
            tools:text="80"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttons_height"
            android:layout_below="@+id/bet_hero_image"
            android:layout_toLeftOf="@id/bet_no_price_btn"
            android:layout_toRightOf="@id/center_bottom"
            android:background="@color/politikon_no_red"
            android:gravity="center"
            android:text="@string/no"/>

        <TextView
            android:id="@+id/bet_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_yes"
            android:layout_margin="@dimen/xs_space"
            android:background="#bbffffff"
            android:gravity="center"
            android:padding="@dimen/xs_space"
            android:textSize="22sp"
            tools:text="Title?"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>